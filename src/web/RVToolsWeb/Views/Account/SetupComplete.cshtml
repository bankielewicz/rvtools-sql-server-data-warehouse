@{
    ViewData["Title"] = "Setup Complete";
    Layout = null;
    var generatedPassword = ViewBag.GeneratedPassword as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Setup Complete - RVTools Data Warehouse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <style>
        body {
            background-color: #212529;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .setup-card {
            max-width: 550px;
            width: 100%;
        }
        .password-display {
            font-family: 'Consolas', 'Monaco', monospace;
            font-size: 1.25rem;
            letter-spacing: 0.1em;
            background-color: #f8f9fa;
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            border: 2px dashed #6c757d;
        }
        .copy-btn {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="setup-card">
        <div class="card shadow">
            <div class="card-header bg-success text-white text-center py-3">
                <h4 class="mb-0"><i class="bi bi-check-circle me-2"></i>Setup Complete!</h4>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-danger">
                    <h5 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Important - Save Your Password!</h5>
                    <p class="mb-2">
                        Your administrator account has been created. <strong>This password will only be shown once.</strong>
                        Please copy it now and store it securely.
                    </p>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Username</label>
                    <div class="password-display">admin</div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Generated Password</label>
                    <div class="input-group">
                        <input type="text" id="passwordField" class="form-control password-display"
                               value="@generatedPassword" readonly />
                        <button class="btn btn-outline-secondary copy-btn" type="button"
                                onclick="copyPassword()" title="Copy to clipboard">
                            <i class="bi bi-clipboard" id="copyIcon"></i>
                        </button>
                    </div>
                    <small class="text-muted d-block mt-2">
                        <i class="bi bi-info-circle me-1"></i>
                        You will be required to change this password on first login.
                    </small>
                </div>

                <div class="alert alert-warning">
                    <i class="bi bi-shield-lock me-2"></i>
                    <strong>Security Note:</strong> This password is cryptographically generated and is not stored
                    anywhere except as a secure hash. If you lose it before logging in, you will need to
                    reset the database.
                </div>

                <a href="@Url.Action("Login")" class="btn btn-primary w-100">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Proceed to Login
                </a>
            </div>
        </div>
    </div>

    <script>
        function copyPassword() {
            const passwordField = document.getElementById('passwordField');
            const copyIcon = document.getElementById('copyIcon');

            navigator.clipboard.writeText(passwordField.value).then(() => {
                // Show success feedback
                copyIcon.className = 'bi bi-check-lg text-success';
                setTimeout(() => {
                    copyIcon.className = 'bi bi-clipboard';
                }, 2000);
            }).catch(() => {
                // Fallback for older browsers
                passwordField.select();
                document.execCommand('copy');
                copyIcon.className = 'bi bi-check-lg text-success';
                setTimeout(() => {
                    copyIcon.className = 'bi bi-clipboard';
                }, 2000);
            });
        }
    </script>
</body>
</html>
