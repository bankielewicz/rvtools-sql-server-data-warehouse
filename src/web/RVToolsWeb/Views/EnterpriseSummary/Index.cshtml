@model RVToolsWeb.Models.ViewModels.Inventory.EnterpriseSummaryViewModel
@{
    ViewData["Title"] = "Enterprise Summary";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-muted">Total VMs</h5>
                <h2 class="mb-0">@Model.TotalVMs.ToString("N0")</h2>
                <small class="text-success">@Model.TotalVMsPoweredOn.ToString("N0") powered on</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-muted">Total Hosts</h5>
                <h2 class="mb-0">@Model.TotalHosts.ToString("N0")</h2>
                <small class="text-muted">across @Model.TotalClusters clusters</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-muted">Total vCPUs</h5>
                <h2 class="mb-0">@Model.TotalvCPUs.ToString("N0")</h2>
                <small class="text-muted">allocated to VMs</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-muted">Total vMemory</h5>
                <h2 class="mb-0">@Model.TotalvMemoryGiB.ToString("N0") GiB</h2>
                <small class="text-muted">allocated to VMs</small>
            </div>
        </div>
    </div>
</div>

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() vCenter servers</span>
    </div>
    <div>
        <a href="/api/Export/enterprise-summary/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/enterprise-summary/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>vCenter Server</th>
                        <th>Datacenters</th>
                        <th>Clusters</th>
                        <th>Hosts</th>
                        <th>VMs (On)</th>
                        <th>VMs (Off)</th>
                        <th>Templates</th>
                        <th>vCPUs</th>
                        <th>vMemory (GiB)</th>
                        <th>Provisioned (TiB)</th>
                        <th>Last Import</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vc in Model.Items)
                    {
                        var memoryGiB = vc.Total_vMemory_MiB.HasValue ? (vc.Total_vMemory_MiB.Value / 1024).ToString("N0") : "-";
                        var provisionedTiB = vc.Total_Provisioned_MiB.HasValue ? (vc.Total_Provisioned_MiB.Value / 1024.0 / 1024.0).ToString("N1") : "-";
                        <tr>
                            <td><span class="fw-medium">@vc.VI_SDK_Server</span></td>
                            <td>@(vc.Datacenter_Count?.ToString() ?? "-")</td>
                            <td>@(vc.Cluster_Count?.ToString() ?? "-")</td>
                            <td>@(vc.Host_Count?.ToString() ?? "-")</td>
                            <td><span class="text-success">@(vc.VMs_PoweredOn?.ToString("N0") ?? "-")</span></td>
                            <td><span class="text-muted">@(vc.VMs_PoweredOff?.ToString("N0") ?? "-")</span></td>
                            <td>@(vc.Templates?.ToString() ?? "-")</td>
                            <td>@(vc.Total_vCPUs?.ToString("N0") ?? "-")</td>
                            <td>@memoryGiB</td>
                            <td>@provisionedTiB</td>
                            <td>@(vc.Latest_Import_Date?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // No cascading filters needed for this report
        });
    </script>
}
