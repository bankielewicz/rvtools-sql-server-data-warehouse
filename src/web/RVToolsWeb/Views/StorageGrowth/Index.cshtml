@model RVToolsWeb.Models.ViewModels.Trends.StorageGrowthViewModel
@using RVToolsWeb.Models.ViewModels.Shared
@{
    ViewData["Title"] = "Storage Growth";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-2">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label" for="datastoreSelect">Datastore</label>
                <select class="form-select form-select-sm" id="datastoreSelect" name="DatastoreName">
                    <option value="">(All - Aggregated)</option>
                    @foreach (var item in Model.Datastores)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.DatastoreName == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" for="lookbackDaysSelect">Time Range</label>
                <select class="form-select form-select-sm" id="lookbackDaysSelect" name="LookbackDays">
                    <option value="7" selected="@(Model.Filter.LookbackDays == 7)">Last 7 Days</option>
                    <option value="30" selected="@(Model.Filter.LookbackDays == 30)">Last 30 Days</option>
                    <option value="90" selected="@(Model.Filter.LookbackDays == 90)">Last 90 Days</option>
                    <option value="180" selected="@(Model.Filter.LookbackDays == 180)">Last 6 Months</option>
                    <option value="365" selected="@(Model.Filter.LookbackDays == 365)">Last Year</option>
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Capacity</h6>
                <h4 class="mb-0">@Model.LatestCapacityGiB GiB</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Used</h6>
                <h4 class="mb-0 text-warning">@Model.LatestUsedGiB GiB</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Free</h6>
                <h4 class="mb-0 text-success">@Model.LatestFreeGiB GiB</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Free %</h6>
                <h4 class="mb-0 @(Model.LatestFreePercent < 10 ? "text-danger" : Model.LatestFreePercent < 20 ? "text-warning" : "text-success")">
                    @Model.LatestFreePercent.ToString("N1")%
                </h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Growth</h6>
                <h4 class="mb-0 @(Model.UsedGrowthGiB >= 0 ? "text-danger" : "text-success")">
                    @(Model.UsedGrowthGiB >= 0 ? "+" : "")@Model.UsedGrowthGiB GiB
                </h4>
            </div>
        </div>
    </div>
</div>

<!-- Chart -->
@if (Model.ChartData.Labels.Any())
{
    <div class="card mb-3">
        <div class="card-header">
            <h6 class="mb-0"><i class="bi bi-bar-chart-fill me-2"></i>Storage Usage Over Time</h6>
        </div>
        <div class="card-body">
            @await Html.PartialAsync("_ChartPartial", (Model.ChartData, Model.ChartOptions, "storageGrowthChart"))
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>No trend data available for the selected time range.
    </div>
}

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() data points</span>
    </div>
    <div>
        <a href="/api/Export/storage-growth/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server&DatastoreName=@Model.Filter.DatastoreName&LookbackDays=@Model.Filter.LookbackDays"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/storage-growth/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server&DatastoreName=@Model.Filter.DatastoreName&LookbackDays=@Model.Filter.LookbackDays"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Datastore</th>
                        <th>Type</th>
                        <th class="text-end">Capacity (GiB)</th>
                        <th class="text-end">Used (GiB)</th>
                        <th class="text-end">Free (GiB)</th>
                        <th class="text-end">Free %</th>
                        <th>vCenter</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items.OrderByDescending(x => x.SnapshotDate).ThenBy(x => x.DatastoreName))
                    {
                        var capacityGiB = item.Capacity_MiB / 1024.0;
                        var usedGiB = item.In_Use_MiB / 1024.0;
                        var freeGiB = item.Free_MiB / 1024.0;
                        <tr>
                            <td>@item.SnapshotDate.ToString("yyyy-MM-dd")</td>
                            <td class="fw-medium">@(item.DatastoreName ?? "-")</td>
                            <td>@(item.Type ?? "-")</td>
                            <td class="text-end">@capacityGiB.ToString("N0")</td>
                            <td class="text-end">@usedGiB.ToString("N0")</td>
                            <td class="text-end">@freeGiB.ToString("N0")</td>
                            <td class="text-end">
                                @if (item.Free_Percent.HasValue)
                                {
                                    <span class="@(item.Free_Percent < 10 ? "text-danger fw-bold" : item.Free_Percent < 20 ? "text-warning" : "")">
                                        @item.Free_Percent.Value.ToString("N1")%
                                    </span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>@(item.VI_SDK_Server ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/chartjs/chart.min.js"></script>
    <script src="~/js/chart-config.js"></script>
}
