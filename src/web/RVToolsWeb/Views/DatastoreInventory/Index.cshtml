@model RVToolsWeb.Models.ViewModels.Inventory.DatastoreInventoryViewModel
@{
    ViewData["Title"] = "Datastore Inventory";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() datastores</span>
    </div>
    <div>
        <a href="/api/Export/datastore-inventory/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/datastore-inventory/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>Datastore</th>
                        <th>Type</th>
                        <th>Capacity (GB)</th>
                        <th>Free (GB)</th>
                        <th>Free %</th>
                        <th>Provisioned (GB)</th>
                        <th>VMs</th>
                        <th>Hosts</th>
                        <th>SIOC</th>
                        <th>Version</th>
                        <th>vCenter</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ds in Model.Items)
                    {
                        var capacityGb = ds.Capacity_MiB.HasValue ? (ds.Capacity_MiB.Value / 1024).ToString("N0") : "-";
                        var freeGb = ds.Free_MiB.HasValue ? (ds.Free_MiB.Value / 1024).ToString("N0") : "-";
                        var provisionedGb = ds.Provisioned_MiB.HasValue ? (ds.Provisioned_MiB.Value / 1024).ToString("N0") : "-";
                        var freePercent = ds.Free_Percent.HasValue ? ds.Free_Percent.Value.ToString("N1") + "%" : "-";

                        string freePercentClass;
                        if (ds.Free_Percent < 10)
                            freePercentClass = "badge-status-critical";
                        else if (ds.Free_Percent < 20)
                            freePercentClass = "badge-status-warning";
                        else
                            freePercentClass = "badge-status-normal";
                        <tr>
                            <td>
                                <span class="fw-medium">@ds.DatastoreName</span>
                                @if (ds.Accessible != true)
                                {
                                    <span class="badge bg-danger ms-1">Inaccessible</span>
                                }
                            </td>
                            <td>@(ds.Type ?? "-")</td>
                            <td>@capacityGb</td>
                            <td>@freeGb</td>
                            <td>
                                @if (ds.Free_Percent.HasValue)
                                {
                                    <span class="badge @freePercentClass">@freePercent</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>@provisionedGb</td>
                            <td>@(ds.Num_VMs?.ToString() ?? "-")</td>
                            <td>@(ds.Num_Hosts?.ToString() ?? "-")</td>
                            <td>
                                @if (ds.SIOC_enabled == true)
                                {
                                    <span class="badge bg-success">Enabled</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Disabled</span>
                                }
                            </td>
                            <td>@(ds.Version ?? "-")</td>
                            <td class="text-truncate" style="max-width: 150px;" title="@ds.VI_SDK_Server">
                                @(ds.VI_SDK_Server ?? "-")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // No cascading filters needed for this report
        });
    </script>
}
