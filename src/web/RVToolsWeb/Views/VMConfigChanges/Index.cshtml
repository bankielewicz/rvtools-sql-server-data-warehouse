@model RVToolsWeb.Models.ViewModels.Trends.VMConfigChangesViewModel
@{
    ViewData["Title"] = "VM Configuration Changes";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-2">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" for="vmNameInput">VM Name</label>
                <input type="text" class="form-control form-control-sm" id="vmNameInput" name="VMName"
                       value="@Model.Filter.VMName" placeholder="Search...">
            </div>
            <div class="col-md-2">
                <label class="form-label" for="daysBackSelect">Time Range</label>
                <select class="form-select form-select-sm" id="daysBackSelect" name="DaysBack">
                    <option value="7" selected="@(Model.Filter.DaysBack == 7)">Last 7 Days</option>
                    <option value="30" selected="@(Model.Filter.DaysBack == 30)">Last 30 Days</option>
                    <option value="90" selected="@(Model.Filter.DaysBack == 90)">Last 90 Days</option>
                    <option value="180" selected="@(Model.Filter.DaysBack == 180)">Last 6 Months</option>
                    <option value="365" selected="@(Model.Filter.DaysBack == 365)">Last Year</option>
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Total Changes</h6>
                <h4 class="mb-0">@Model.TotalChanges</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Unique VMs</h6>
                <h4 class="mb-0 text-info">@Model.UniqueVMCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">CPU Changes</h6>
                <h4 class="mb-0">@Model.CPUChanges</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Memory Changes</h6>
                <h4 class="mb-0">@Model.MemoryChanges</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Power Changes</h6>
                <h4 class="mb-0">@Model.PowerstateChanges</h4>
            </div>
        </div>
    </div>
</div>

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() changes recorded</span>
    </div>
    <div>
        <a href="/api/Export/vm-config-changes/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server&VMName=@Model.Filter.VMName&DaysBack=@Model.Filter.DaysBack"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/vm-config-changes/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server&VMName=@Model.Filter.VMName&DaysBack=@Model.Filter.DaysBack"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>Changed Date</th>
                        <th>VM</th>
                        <th>Power State</th>
                        <th class="text-end">CPUs</th>
                        <th class="text-end">Memory (GB)</th>
                        <th class="text-end">NICs</th>
                        <th class="text-end">Disks</th>
                        <th>HW Version</th>
                        <th>Host</th>
                        <th>Cluster</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        var powerClass = item.Powerstate?.ToLower() == "poweredon" ? "badge-poweredon" : "badge-poweredoff";
                        var memoryGB = item.Memory_MB.HasValue ? item.Memory_MB.Value / 1024.0 : 0;
                        <tr>
                            <td>
                                @if (item.ChangedDate.HasValue)
                                {
                                    @item.ChangedDate.Value.ToString("yyyy-MM-dd HH:mm")
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>
                                <span class="fw-medium">@(item.VM ?? "-")</span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Powerstate))
                                {
                                    <span class="badge @powerClass">@item.Powerstate</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td class="text-end">@(item.CPUs?.ToString() ?? "-")</td>
                            <td class="text-end">@(item.Memory_MB.HasValue ? memoryGB.ToString("N1") : "-")</td>
                            <td class="text-end">@(item.NICs?.ToString() ?? "-")</td>
                            <td class="text-end">@(item.Disks?.ToString() ?? "-")</td>
                            <td>@(item.HW_version ?? "-")</td>
                            <td class="text-truncate" style="max-width: 150px;" title="@item.Host">
                                @(item.Host ?? "-")
                            </td>
                            <td>@(item.Cluster ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // No cascading filters needed
        });
    </script>
}
