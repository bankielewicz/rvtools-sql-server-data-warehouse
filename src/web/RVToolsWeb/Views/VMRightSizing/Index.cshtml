@model RVToolsWeb.Models.ViewModels.Capacity.VMRightSizingViewModel
@{
    ViewData["Title"] = "VM Right-Sizing";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-2">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" for="datacenterSelect">Datacenter</label>
                <select class="form-select form-select-sm" id="datacenterSelect" name="Datacenter">
                    <option value="">(All)</option>
                    @foreach (var item in Model.Datacenters)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.Datacenter == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" for="clusterSelect">Cluster</label>
                <select class="form-select form-select-sm" id="clusterSelect" name="Cluster">
                    <option value="">(All)</option>
                    @foreach (var item in Model.Clusters)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.Cluster == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" for="maxActivePercentSelect">Max Active Memory %</label>
                <select class="form-select form-select-sm" id="maxActivePercentSelect" name="MaxActivePercent">
                    <option value="" selected="@(Model.Filter.MaxActivePercent == null)">(All)</option>
                    <option value="25" selected="@(Model.Filter.MaxActivePercent == 25)">Under 25%</option>
                    <option value="50" selected="@(Model.Filter.MaxActivePercent == 50)">Under 50%</option>
                    <option value="75" selected="@(Model.Filter.MaxActivePercent == 75)">Under 75%</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Total VMs</h6>
                <h4 class="mb-0">@Model.TotalVMs</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">&lt; 50% Utilized</h6>
                <h4 class="mb-0 text-warning">@Model.UnderutilizedMemoryCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">&lt; 25% Utilized</h6>
                <h4 class="mb-0 text-danger">@Model.HighlyUnderutilizedCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Allocated Memory</h6>
                <h4 class="mb-0">@Model.TotalAllocatedMemoryGiB GiB</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Active Memory</h6>
                <h4 class="mb-0 text-info">@Model.TotalActiveMemoryGiB GiB</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Ballooned</h6>
                <h4 class="mb-0 text-danger">@Model.BalloonedCount</h4>
            </div>
        </div>
    </div>
</div>

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() VMs (powered on only)</span>
    </div>
    <div>
        <a href="/api/Export/vm-rightsizing/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server&Datacenter=@Model.Filter.Datacenter&Cluster=@Model.Filter.Cluster&MaxActivePercent=@Model.Filter.MaxActivePercent"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/vm-rightsizing/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server&Datacenter=@Model.Filter.Datacenter&Cluster=@Model.Filter.Cluster&MaxActivePercent=@Model.Filter.MaxActivePercent"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>VM</th>
                        <th class="text-end">vCPUs</th>
                        <th class="text-end">Allocated (GiB)</th>
                        <th class="text-end">Active (GiB)</th>
                        <th class="text-end">Active %</th>
                        <th class="text-end">Ballooned (MiB)</th>
                        <th class="text-end">CPU Ready %</th>
                        <th>Resource Pool</th>
                        <th>Host</th>
                        <th>Cluster</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vm in Model.Items)
                    {
                        var allocatedGiB = vm.Memory_Allocated_MiB.HasValue ? vm.Memory_Allocated_MiB.Value / 1024.0 : 0;
                        var activeGiB = vm.Memory_Active_MiB.HasValue ? vm.Memory_Active_MiB.Value / 1024.0 : 0;

                        string utilizationClass = "";
                        if (vm.Memory_Active_Percent.HasValue)
                        {
                            if (vm.Memory_Active_Percent < 25)
                                utilizationClass = "text-danger fw-bold";
                            else if (vm.Memory_Active_Percent < 50)
                                utilizationClass = "text-warning";
                        }
                        <tr>
                            <td>
                                <span class="fw-medium">@(vm.VM ?? "-")</span>
                            </td>
                            <td class="text-end">@(vm.CPU_Allocated?.ToString() ?? "-")</td>
                            <td class="text-end">@allocatedGiB.ToString("N1")</td>
                            <td class="text-end">@activeGiB.ToString("N1")</td>
                            <td class="text-end">
                                @if (vm.Memory_Active_Percent.HasValue)
                                {
                                    <span class="@utilizationClass">
                                        @vm.Memory_Active_Percent.Value.ToString("N1")%
                                    </span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (vm.Memory_Ballooned_MiB.HasValue && vm.Memory_Ballooned_MiB > 0)
                                {
                                    <span class="text-danger">@vm.Memory_Ballooned_MiB.Value.ToString("N0")</span>
                                }
                                else
                                {
                                    <span>0</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (vm.CPU_Readiness_Percent.HasValue)
                                {
                                    <span class="@(vm.CPU_Readiness_Percent > 5 ? "text-warning" : "")">
                                        @vm.CPU_Readiness_Percent.Value.ToString("N2")%
                                    </span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td class="text-truncate" style="max-width: 120px;" title="@vm.Resource_pool">
                                @(vm.Resource_pool ?? "-")
                            </td>
                            <td class="text-truncate" style="max-width: 150px;" title="@vm.Host">
                                @(vm.Host ?? "-")
                            </td>
                            <td>@(vm.Cluster ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Cascading dropdown: vCenter Server -> Datacenter
            $('#viSdkServerSelect').change(function () {
                var viServer = $(this).val();
                $.get('/api/FilterData/datacenters', { viSdkServer: viServer }, function (data) {
                    var $datacenter = $('#datacenterSelect');
                    $datacenter.empty().append('<option value="">(All)</option>');
                    $.each(data, function (i, item) {
                        $datacenter.append($('<option>').val(item.value).text(item.label));
                    });
                    $('#clusterSelect').empty().append('<option value="">(All)</option>');
                });
            });

            // Cascading dropdown: Datacenter -> Cluster
            $('#datacenterSelect').change(function () {
                var datacenter = $(this).val();
                var viServer = $('#viSdkServerSelect').val();
                $.get('/api/FilterData/clusters', { datacenter: datacenter, viSdkServer: viServer }, function (data) {
                    var $cluster = $('#clusterSelect');
                    $cluster.empty().append('<option value="">(All)</option>');
                    $.each(data, function (i, item) {
                        $cluster.append($('<option>').val(item.value).text(item.label));
                    });
                });
            });
        });
    </script>
}
