@model RVToolsWeb.Models.ViewModels.Admin.JobEditViewModel
@{
    ViewData["Title"] = "Edit Import Job";
    var timeZones = ViewBag.TimeZones as List<RVToolsWeb.Controllers.Admin.SelectListItem>;
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Import Jobs</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
        <h4 class="mb-0">
            <i class="bi bi-pencil me-2"></i>Edit Import Job: @Model.JobName
        </h4>
    </div>
</div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="JobId" />

    <div class="row">
        <div class="col-lg-8">
            <!-- Job Details Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-info-circle me-2"></i>Job Details
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="JobName" class="form-label"></label>
                            <input asp-for="JobName" class="form-control" />
                            <span asp-validation-for="JobName" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="JobType" class="form-label"></label>
                            <select asp-for="JobType" class="form-select">
                                <option value="Scheduled">Scheduled</option>
                                <option value="Manual">Manual Only</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="VIServer" class="form-label"></label>
                            <input asp-for="VIServer" class="form-control" placeholder="e.g., vcenter01.domain.com" />
                            <small class="text-muted">Optional: vCenter identifier for this job</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-check mt-4">
                                <input asp-for="IsEnabled" class="form-check-input" type="checkbox" />
                                <label asp-for="IsEnabled" class="form-check-label">Enable this job</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Folder Configuration Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-folder me-2"></i>Folder Configuration
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="IncomingFolder" class="form-label"></label>
                        <input asp-for="IncomingFolder" class="form-control" />
                        <span asp-validation-for="IncomingFolder" class="text-danger"></span>
                        <small class="text-muted">Folder where RVTools exports will be placed</small>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ProcessedFolder" class="form-label"></label>
                        <input asp-for="ProcessedFolder" class="form-control" />
                        <small class="text-muted">Successfully imported files are moved here (optional)</small>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ErrorsFolder" class="form-label"></label>
                        <input asp-for="ErrorsFolder" class="form-control" />
                        <small class="text-muted">Failed import files are moved here (optional)</small>
                    </div>
                </div>
            </div>

            <!-- Schedule Configuration Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-calendar-event me-2"></i>Schedule Configuration
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CronSchedule" class="form-label"></label>
                            <input asp-for="CronSchedule" class="form-control font-monospace" placeholder="e.g., 0 0 2 * * ?" />
                            <small class="text-muted">
                                Quartz cron expression.
                                <a href="https://www.quartz-scheduler.net/documentation/quartz-3.x/tutorial/crontriggers.html" target="_blank">Reference</a>
                            </small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TimeZone" class="form-label"></label>
                            <select asp-for="TimeZone" class="form-select">
                                @if (timeZones != null)
                                {
                                    @foreach (var tz in timeZones)
                                    {
                                        <option value="@tz.Value" selected="@(tz.Value == Model.TimeZone)">@tz.Text</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-lightbulb me-2"></i>
                        <strong>Common Cron Expressions:</strong>
                        <ul class="mb-0 mt-2">
                            <li><code>0 0 2 * * ?</code> - Daily at 2:00 AM</li>
                            <li><code>0 0 */6 * * ?</code> - Every 6 hours</li>
                            <li><code>0 0 2 ? * MON-FRI</code> - Weekdays at 2:00 AM</li>
                            <li><code>0 0 2 ? * SUN</code> - Weekly on Sunday at 2:00 AM</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Database Connection Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-database me-2"></i>Database Connection
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ServerInstance" class="form-label"></label>
                            <input asp-for="ServerInstance" class="form-control" />
                            <span asp-validation-for="ServerInstance" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DatabaseName" class="form-label"></label>
                            <input asp-for="DatabaseName" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="UseWindowsAuth" class="form-check-input" type="checkbox"
                                   onchange="toggleSqlAuth(this.checked)" />
                            <label asp-for="UseWindowsAuth" class="form-check-label">Use Windows Authentication</label>
                        </div>
                        <small class="text-muted">Uses the service account credentials when enabled</small>
                    </div>
                    <div id="sqlAuthSection" class="@(Model.UseWindowsAuth ? "d-none" : "")">
                        @if (Model.HasExistingCredential)
                        {
                            <div class="alert alert-secondary">
                                <i class="bi bi-key me-2"></i>
                                Stored credentials exist. Leave password blank to keep existing credentials,
                                or enter new credentials to update.
                            </div>
                        }
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SqlUsername" class="form-label"></label>
                                <input asp-for="SqlUsername" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="SqlPassword" class="form-label"></label>
                                <input asp-for="SqlPassword" class="form-control" placeholder="@(Model.HasExistingCredential ? "(unchanged)" : "")" />
                            </div>
                        </div>
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-shield-lock me-2"></i>
                            Credentials are encrypted using Windows Data Protection API before storage.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar with info -->
        <div class="col-lg-4">
            <div class="card bg-light mb-4">
                <div class="card-header">
                    <i class="bi bi-info-circle me-2"></i>Job Information
                </div>
                <div class="card-body">
                    <table class="table table-sm mb-0">
                        <tr>
                            <th>Job ID</th>
                            <td>@Model.JobId</td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <i class="bi bi-lightning me-2"></i>Quick Actions
                </div>
                <div class="card-body">
                    <a asp-action="History" asp-route-id="@Model.JobId" class="btn btn-outline-secondary w-100 mb-2">
                        <i class="bi bi-clock-history me-1"></i>View History
                    </a>
                    <button type="button" class="btn btn-success w-100" onclick="triggerJobNow(@Model.JobId)">
                        <i class="bi bi-play-fill me-1"></i>Run Now
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <hr />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Cancel
                </a>
                <div>
                    <button type="button" class="btn btn-outline-danger me-2" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Job</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete job <strong>@Model.JobName</strong>?
                <p class="text-danger mt-2 small">This will also delete all job run history.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.JobId" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Toast for notifications -->
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
    <div id="jobToast" class="toast" role="alert">
        <div class="toast-header">
            <i class="bi bi-check-circle text-success me-2"></i>
            <strong class="me-auto">Success</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body" id="toastMessage"></div>
    </div>
</div>

@section Scripts {
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    var requestToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}
<script>
    function toggleSqlAuth(useWindowsAuth) {
        const section = document.getElementById('sqlAuthSection');
        if (useWindowsAuth) {
            section.classList.add('d-none');
        } else {
            section.classList.remove('d-none');
        }
    }

    async function triggerJobNow(jobId) {
        const token = '@requestToken';
        try {
            const response = await fetch(`/JobManagement/TriggerNow/${jobId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-XSRF-TOKEN': token
                }
            });

            // Check if response is OK before parsing JSON
            if (!response.ok) {
                const text = await response.text();
                try {
                    const errorData = JSON.parse(text);
                    document.getElementById('toastMessage').textContent = errorData.error || `Server error: ${response.status}`;
                } catch {
                    document.getElementById('toastMessage').textContent = `Server error: ${response.status} ${response.statusText}`;
                }
                new bootstrap.Toast(document.getElementById('jobToast')).show();
                return;
            }

            const result = await response.json();

            document.getElementById('toastMessage').textContent =
                result.success ? (result.message || 'Job triggered successfully') : (result.error || 'Failed to trigger job');

            const toast = new bootstrap.Toast(document.getElementById('jobToast'));
            toast.show();
        } catch (error) {
            document.getElementById('toastMessage').textContent = 'Failed to trigger job: ' + error.message;
            new bootstrap.Toast(document.getElementById('jobToast')).show();
        }
    }
</script>
}
