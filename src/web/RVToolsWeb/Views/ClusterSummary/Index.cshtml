@model RVToolsWeb.Models.ViewModels.Inventory.ClusterSummaryViewModel
@{
    ViewData["Title"] = "Cluster Summary";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() clusters</span>
    </div>
    <div>
        <a href="/api/Export/cluster-summary/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/cluster-summary/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>Cluster</th>
                        <th>Status</th>
                        <th>Hosts</th>
                        <th>CPU Cores</th>
                        <th>Total CPU (MHz)</th>
                        <th>Memory (GB)</th>
                        <th>HA</th>
                        <th>DRS</th>
                        <th>DPM</th>
                        <th>vMotions</th>
                        <th>vCenter</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cluster in Model.Items)
                    {
                        var statusClass = cluster.OverallStatus?.ToLower() switch
                        {
                            "green" => "badge-poweredon",
                            "yellow" => "badge-suspended",
                            "red" => "badge-status-critical",
                            _ => "badge-status-unknown"
                        };
                        var memoryGb = cluster.TotalMemory.HasValue ? (cluster.TotalMemory.Value / 1024.0 / 1024.0 / 1024.0).ToString("N0") : "-";
                        var totalCpuMhz = cluster.TotalCpu.HasValue ? cluster.TotalCpu.Value.ToString("N0") : "-";
                        <tr>
                            <td><span class="fw-medium">@cluster.ClusterName</span></td>
                            <td><span class="badge @statusClass">@(cluster.OverallStatus ?? "-")</span></td>
                            <td>@(cluster.NumHosts?.ToString() ?? "-")</td>
                            <td>@(cluster.NumCpuCores?.ToString() ?? "-")</td>
                            <td>@totalCpuMhz</td>
                            <td>@memoryGb</td>
                            <td>
                                @if (cluster.HA_enabled == true)
                                {
                                    <span class="badge bg-success">Enabled</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Disabled</span>
                                }
                            </td>
                            <td>
                                @if (cluster.DRS_enabled == true)
                                {
                                    <span class="badge bg-success">Enabled</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Disabled</span>
                                }
                            </td>
                            <td>
                                @if (cluster.DPM_enabled == true)
                                {
                                    <span class="badge bg-success">Enabled</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Disabled</span>
                                }
                            </td>
                            <td>@(cluster.Num_VMotions?.ToString("N0") ?? "-")</td>
                            <td class="text-truncate" style="max-width: 150px;" title="@cluster.VI_SDK_Server">
                                @(cluster.VI_SDK_Server ?? "-")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // No cascading filters needed for this report
        });
    </script>
}
