@model RVToolsWeb.Models.ViewModels.Trends.ChangeSummaryViewModel
@{
    ViewData["Title"] = "Change Summary";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-arrow-left-right me-2"></i>Change Summary</h2>
    @if (ViewBag.UsingGlobalFilter != true)
    {
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-counterclockwise me-1"></i>Reset to Global Filter
        </a>
    }
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-success bg-opacity-10 border-success">
            <div class="card-body text-center">
                <h2 class="text-success">+@Model.CreatedCount</h2>
                <p class="mb-0">VMs Created</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger bg-opacity-10 border-danger">
            <div class="card-body text-center">
                <h2 class="text-danger">-@Model.DeletedCount</h2>
                <p class="mb-0">VMs Deleted</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card @(Model.NetChange >= 0 ? "bg-success" : "bg-danger") bg-opacity-10">
            <div class="card-body text-center">
                <h2 class="@(Model.NetChange >= 0 ? "text-success" : "text-danger")">
                    @(Model.NetChange >= 0 ? "+" : "")@Model.NetChange
                </h2>
                <p class="mb-0">Net Change</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body text-center">
                <h2>@Model.Items.Select(i => i.VI_SDK_Server).Distinct().Count()</h2>
                <p class="mb-0">vCenters Affected</p>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-header">
        <i class="bi bi-funnel me-2"></i>Filters
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Time Range</label>
                <select name="TimeFilter" class="form-select">
                    <option value="latest" selected="@(Model.Filter.TimeFilter == "latest")">Latest Import</option>
                    <option value="7d" selected="@(Model.Filter.TimeFilter == "7d")">Last 7 Days</option>
                    <option value="30d" selected="@(Model.Filter.TimeFilter == "30d")">Last 30 Days</option>
                    <option value="90d" selected="@(Model.Filter.TimeFilter == "90d")">Last 90 Days</option>
                    <option value="1y" selected="@(Model.Filter.TimeFilter == "1y")">Last Year</option>
                    <option value="all" selected="@(Model.Filter.TimeFilter == "all")">All Time</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">vCenter</label>
                <select name="VI_SDK_Server" class="form-select">
                    <option value="">All vCenters</option>
                    @foreach (var vc in Model.VISdkServers)
                    {
                        <option value="@vc.Value" selected="@(Model.Filter.VI_SDK_Server == vc.Value)">@vc.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Change Type</label>
                <select name="ChangeType" class="form-select">
                    <option value="">All Changes</option>
                    <option value="Created" selected="@(Model.Filter.ChangeType == "Created")">Created Only</option>
                    <option value="Deleted" selected="@(Model.Filter.ChangeType == "Deleted")">Deleted Only</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Apply</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<!-- Results Table -->
<div class="card">
    <div class="card-header">
        <i class="bi bi-table me-2"></i>Change Details (@Model.Items.Count() records)
    </div>
    <div class="card-body">
        <table id="changeSummaryTable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Change</th>
                    <th>VM Name</th>
                    <th>vCenter</th>
                    <th>Datacenter</th>
                    <th>Cluster</th>
                    <th>Host</th>
                    <th>CPUs</th>
                    <th>Memory (GB)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.ChangeDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (item.ChangeType == "Created")
                            {
                                <span class="badge bg-success">Created</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Deleted</span>
                            }
                        </td>
                        <td>@item.VM</td>
                        <td>@item.VI_SDK_Server</td>
                        <td>@item.Datacenter</td>
                        <td>@item.Cluster</td>
                        <td>@item.Host</td>
                        <td>@item.CPUs</td>
                        <td>@(item.Memory.HasValue ? (item.Memory.Value / 1024).ToString("N0") : "-")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#changeSummaryTable').DataTable({
                order: [[0, 'desc']],
                pageLength: 25
            });
        });
    </script>
}
