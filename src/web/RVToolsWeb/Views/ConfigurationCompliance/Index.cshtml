@model RVToolsWeb.Models.ViewModels.Health.ConfigurationComplianceViewModel
@{
    ViewData["Title"] = "Configuration Compliance";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="showNonCompliantOnly" name="ShowNonCompliantOnly" value="true"
                           @(Model.Filter.ShowNonCompliantOnly ? "checked" : "") />
                    <label class="form-check-label" for="showNonCompliantOnly">
                        Show Non-Compliant Only
                    </label>
                </div>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Compliant</h6>
                <h4 class="mb-0 text-success">@Model.CompliantCount</h4>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Non-Compliant</h6>
                <h4 class="mb-0 text-danger">@Model.NonCompliantCount</h4>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Compliance Rate</h6>
                <h4 class="mb-0">@Model.CompliancePercent.ToString("N1")%</h4>
            </div>
        </div>
    </div>
</div>

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() VMs</span>
    </div>
    <div>
        <a href="/api/Export/configuration-compliance/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server&ShowNonCompliantOnly=@Model.Filter.ShowNonCompliantOnly"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/configuration-compliance/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server&ShowNonCompliantOnly=@Model.Filter.ShowNonCompliantOnly"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>VM</th>
                        <th>Status</th>
                        <th>vCPU Ratio</th>
                        <th>Mem Resv %</th>
                        <th>Boot Delay</th>
                        <th>Tools</th>
                        <th>Datacenter</th>
                        <th>Cluster</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vm in Model.Items)
                    {
                        var statusClass = vm.Overall_Compliance_Status == "Compliant" ? "badge-status-normal" : "badge-status-critical";
                        var cpuClass = vm.vCPU_Ratio_Compliant == 1 ? "text-success" : "text-danger";
                        var memClass = vm.Memory_Reservation_Compliant == 1 ? "text-success" : "text-danger";
                        var bootClass = vm.Boot_Delay_Compliant == 1 ? "text-success" : "text-danger";
                        var toolsClass = vm.Tools_Compliant == 1 ? "text-success" : "text-danger";
                        <tr>
                            <td><span class="fw-medium">@(vm.VM ?? "-")</span></td>
                            <td>
                                <span class="badge @statusClass">@(vm.Overall_Compliance_Status ?? "-")</span>
                            </td>
                            <td class="@cpuClass">
                                @(vm.vCPU_to_Core_Ratio?.ToString("N2") ?? "-")
                                @if (vm.vCPU_Ratio_Compliant == 1)
                                {
                                    <i class="bi bi-check-circle-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle-fill"></i>
                                }
                            </td>
                            <td class="@memClass">
                                @(vm.Memory_Reservation_Percent?.ToString("N0") ?? "0")%
                                @if (vm.Memory_Reservation_Compliant == 1)
                                {
                                    <i class="bi bi-check-circle-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle-fill"></i>
                                }
                            </td>
                            <td class="@bootClass">
                                @(vm.Boot_Delay_Seconds?.ToString() ?? "0")s
                                @if (vm.Boot_Delay_Compliant == 1)
                                {
                                    <i class="bi bi-check-circle-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle-fill"></i>
                                }
                            </td>
                            <td class="@toolsClass">
                                @(vm.Tools_Status ?? "-")
                                @if (vm.Tools_Compliant == 1)
                                {
                                    <i class="bi bi-check-circle-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle-fill"></i>
                                }
                            </td>
                            <td>@(vm.Datacenter ?? "-")</td>
                            <td>@(vm.Cluster ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Compliance Rules Legend -->
<div class="mt-3">
    <small class="text-muted">
        <strong>Compliance Rules:</strong>
        vCPU:Core ratio ≤ 4:1 |
        Memory reservation ≥ 50% |
        Boot delay ≥ 10 seconds |
        VMware Tools current
    </small>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // No cascading filters needed
        });
    </script>
}
