@model RVToolsWeb.Models.ViewModels.Inventory.LicenseComplianceViewModel
@{
    ViewData["Title"] = "License Compliance";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() licenses</span>
        @{
            var issueCount = Model.Items.Count(x => x.Compliance_Status != "Compliant");
            if (issueCount > 0)
            {
                <span class="badge bg-warning ms-2">@issueCount with issues</span>
            }
        }
    </div>
    <div>
        <a href="/api/Export/license-compliance/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/license-compliance/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>License Name</th>
                        <th>Status</th>
                        <th>Used</th>
                        <th>Total</th>
                        <th>Usage %</th>
                        <th>Expiration</th>
                        <th>Days Left</th>
                        <th>Cost Unit</th>
                        <th>vCenter</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lic in Model.Items)
                    {
                        string statusClass;
                        switch (lic.Compliance_Status)
                        {
                            case "Compliant": statusClass = "badge-status-normal"; break;
                            case "Over-Allocated": statusClass = "badge-status-critical"; break;
                            case "Expired": statusClass = "badge-status-critical"; break;
                            case "Expiring Soon": statusClass = "badge-status-warning"; break;
                            case "Near Capacity": statusClass = "badge-status-warning"; break;
                            default: statusClass = "badge-status-unknown"; break;
                        }

                        string usageClass;
                        if (lic.Usage_Percent > 100)
                            usageClass = "badge-status-critical";
                        else if (lic.Usage_Percent > 90)
                            usageClass = "badge-status-warning";
                        else
                            usageClass = "badge-status-normal";

                        string daysClass;
                        if (lic.Days_Until_Expiration < 0)
                            daysClass = "badge-status-critical";
                        else if (lic.Days_Until_Expiration < 30)
                            daysClass = "badge-status-warning";
                        else
                            daysClass = "badge-status-normal";
                        <tr>
                            <td>
                                <span class="fw-medium">@(lic.LicenseName ?? "-")</span>
                                @if (!string.IsNullOrEmpty(lic.Labels))
                                {
                                    <br /><small class="text-muted">@lic.Labels</small>
                                }
                            </td>
                            <td>
                                <span class="badge @statusClass">@(lic.Compliance_Status ?? "-")</span>
                            </td>
                            <td>@(lic.Used_Licenses?.ToString("N0") ?? "-")</td>
                            <td>@(lic.Total_Licenses?.ToString("N0") ?? "-")</td>
                            <td>
                                @if (lic.Usage_Percent.HasValue)
                                {
                                    <span class="badge @usageClass">@lic.Usage_Percent.Value.ToString("N1")%</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>@(lic.Expiration_Date?.ToString("yyyy-MM-dd") ?? "Never")</td>
                            <td>
                                @if (lic.Days_Until_Expiration.HasValue)
                                {
                                    <span class="badge @daysClass">@lic.Days_Until_Expiration.Value days</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>@(lic.Cost_Unit ?? "-")</td>
                            <td class="text-truncate" style="max-width: 150px;" title="@lic.VI_SDK_Server">
                                @(lic.VI_SDK_Server ?? "-")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // No cascading filters needed for this report
        });
    </script>
}
