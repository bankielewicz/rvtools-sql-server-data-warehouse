@model RVToolsWeb.Models.ViewModels.Health.OrphanedFilesViewModel
@{
    ViewData["Title"] = "Orphaned Files";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="showOrphanedOnly" name="ShowOrphanedOnly" value="true"
                           @(Model.Filter.ShowOrphanedOnly ? "checked" : "") />
                    <label class="form-check-label" for="showOrphanedOnly">
                        Show Orphaned Only
                    </label>
                </div>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col-md-6">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Orphaned Files</h6>
                <h4 class="mb-0 text-warning">@Model.OrphanedCount</h4>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Reclaimable Space</h6>
                <h4 class="mb-0 text-warning">@Model.TotalOrphanedSizeGiB.ToString("N2") GiB</h4>
            </div>
        </div>
    </div>
</div>

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() files</span>
    </div>
    <div>
        <a href="/api/Export/orphaned-files/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server&ShowOrphanedOnly=@Model.Filter.ShowOrphanedOnly"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/orphaned-files/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server&ShowOrphanedOnly=@Model.Filter.ShowOrphanedOnly"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>File Name</th>
                        <th>Type</th>
                        <th>Size (GiB)</th>
                        <th>Status</th>
                        <th>Datastore</th>
                        <th>Path</th>
                        <th>vCenter</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model.Items)
                    {
                        <tr class="@(file.IsOrphaned ? "table-warning" : "")">
                            <td><span class="fw-medium">@(file.File_Name ?? "-")</span></td>
                            <td>
                                <span class="badge bg-secondary">@(file.File_Type ?? "-")</span>
                            </td>
                            <td>@(file.File_Size_GiB?.ToString("N2") ?? "-")</td>
                            <td>
                                @if (file.IsOrphaned)
                                {
                                    <span class="badge bg-warning text-dark">Orphaned</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">In Use</span>
                                }
                            </td>
                            <td>@(file.Datastore ?? "-")</td>
                            <td class="text-truncate" style="max-width: 250px;" title="@file.Path">
                                @(file.Friendly_Path_Name ?? file.Path ?? "-")
                            </td>
                            <td class="text-truncate" style="max-width: 150px;" title="@file.VI_SDK_Server">
                                @(file.VI_SDK_Server ?? "-")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Note -->
<div class="mt-3">
    <small class="text-muted">
        <i class="bi bi-info-circle me-1"></i>
        Orphaned files are VMDKs not linked to any registered VM. Requires RVTools to be run with -GetFileInfo flag.
    </small>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // No cascading filters needed
        });
    </script>
}
