@model RVToolsWeb.Models.ViewModels.Trends.DatastoreCapacityTrendViewModel
@using RVToolsWeb.Models.ViewModels.Shared
@{
    ViewData["Title"] = "Datastore Capacity Trend";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-2">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label" for="datastoreSelect">Datastore</label>
                <select class="form-select form-select-sm" id="datastoreSelect" name="DatastoreName">
                    <option value="">(All - Aggregated)</option>
                    @foreach (var item in Model.Datastores)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.DatastoreName == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-auto">
                @await Html.PartialAsync("_DateRangePickerPartial", (Model.Filter.StartDate, Model.Filter.EndDate, 30))
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Data Points</h6>
                <h4 class="mb-0">@Model.DataPointCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Datastores</h6>
                <h4 class="mb-0">@Model.UniqueDatastoreCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Avg Free %</h6>
                <h4 class="mb-0 @(Model.AvgFreePercent < 10 ? "text-danger" : Model.AvgFreePercent < 20 ? "text-warning" : "text-success")">
                    @Model.AvgFreePercent.ToString("N1")%
                </h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Critical Snapshots</h6>
                <h4 class="mb-0 text-danger">@Model.CriticalSnapshotCount</h4>
            </div>
        </div>
    </div>
</div>

<!-- Chart -->
@if (Model.ChartData.Labels.Any())
{
    <div class="card mb-3">
        <div class="card-header">
            <h6 class="mb-0"><i class="bi bi-graph-up me-2"></i>Capacity Trend Over Time</h6>
        </div>
        <div class="card-body">
            @await Html.PartialAsync("_ChartPartial", (Model.ChartData, Model.ChartOptions, "datastoreCapacityTrendChart"))
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>No trend data available for the selected time range.
    </div>
}

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() data points</span>
    </div>
    <div>
        <a href="/api/Export/datastore-capacity-trend/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server&DatastoreName=@Model.Filter.DatastoreName&StartDate=@Model.Filter.EffectiveStartDate.ToString("yyyy-MM-dd")&EndDate=@Model.Filter.EffectiveEndDate.ToString("yyyy-MM-dd")"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/datastore-capacity-trend/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server&DatastoreName=@Model.Filter.DatastoreName&StartDate=@Model.Filter.EffectiveStartDate.ToString("yyyy-MM-dd")&EndDate=@Model.Filter.EffectiveEndDate.ToString("yyyy-MM-dd")"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Datastore</th>
                        <th>Type</th>
                        <th class="text-end">Capacity (GiB)</th>
                        <th class="text-end">Provisioned (GiB)</th>
                        <th class="text-end">Used (GiB)</th>
                        <th class="text-end">Free %</th>
                        <th class="text-end">VMs</th>
                        <th>vCenter</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items.OrderByDescending(x => x.SnapshotDate).ThenBy(x => x.DatastoreName))
                    {
                        var capacityGiB = item.Capacity_MiB / 1024.0;
                        var provisionedGiB = item.Provisioned_MiB / 1024.0;
                        var usedGiB = item.In_Use_MiB / 1024.0;
                        <tr>
                            <td>@item.SnapshotDate.ToString("yyyy-MM-dd")</td>
                            <td class="fw-medium">@(item.DatastoreName ?? "-")</td>
                            <td>@(item.Type ?? "-")</td>
                            <td class="text-end">@capacityGiB.ToString("N0")</td>
                            <td class="text-end">@provisionedGiB.ToString("N0")</td>
                            <td class="text-end">@usedGiB.ToString("N0")</td>
                            <td class="text-end">
                                @if (item.Free_Percent.HasValue)
                                {
                                    <span class="@(item.Free_Percent < 10 ? "text-danger fw-bold" : item.Free_Percent < 20 ? "text-warning" : "")">
                                        @item.Free_Percent.Value.ToString("N1")%
                                    </span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td class="text-end">@(item.Num_VMs?.ToString() ?? "-")</td>
                            <td>@(item.VI_SDK_Server ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    
    <script src="~/js/chart-config.js"></script>
}
