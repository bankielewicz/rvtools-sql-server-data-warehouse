@model RVToolsWeb.Models.ViewModels.Inventory.VMInventoryViewModel
@{
    ViewData["Title"] = "VM Inventory";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-2">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" for="datacenterSelect">Datacenter</label>
                <select class="form-select form-select-sm" id="datacenterSelect" name="Datacenter">
                    <option value="">(All)</option>
                    @foreach (var item in Model.Datacenters)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.Datacenter == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" for="clusterSelect">Cluster</label>
                <select class="form-select form-select-sm" id="clusterSelect" name="Cluster">
                    <option value="">(All)</option>
                    @foreach (var item in Model.Clusters)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.Cluster == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" for="powerstateSelect">Power State</label>
                <select class="form-select form-select-sm" id="powerstateSelect" name="Powerstate">
                    <option value="">(All)</option>
                    @foreach (var item in Model.Powerstates)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.Powerstate == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() virtual machines</span>
    </div>
    <div>
        <a href="/api/Export/vm-inventory/excel?Datacenter=@Model.Filter.Datacenter&Cluster=@Model.Filter.Cluster&Powerstate=@Model.Filter.Powerstate&VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/vm-inventory/csv?Datacenter=@Model.Filter.Datacenter&Cluster=@Model.Filter.Cluster&Powerstate=@Model.Filter.Powerstate&VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table" id="vmInventoryTable">
                <thead class="table-light">
                    <tr>
                        <th>VM</th>
                        <th>Power State</th>
                        <th>CPUs</th>
                        <th>Memory (GB)</th>
                        <th>Storage (GB)</th>
                        <th>IP Address</th>
                        <th>OS</th>
                        <th>Datacenter</th>
                        <th>Cluster</th>
                        <th>Host</th>
                        <th>HW Version</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vm in Model.Items)
                    {
                        var powerBadgeClass = vm.Powerstate?.ToLower() switch
                        {
                            "poweredon" => "badge-poweredon",
                            "poweredoff" => "badge-poweredoff",
                            "suspended" => "badge-suspended",
                            _ => "badge-poweredoff"
                        };
                        var memoryGb = vm.Memory.HasValue ? (vm.Memory.Value / 1024.0).ToString("N1") : "-";
                        var storageGb = vm.Total_disk_capacity_MiB.HasValue ? (vm.Total_disk_capacity_MiB.Value / 1024).ToString("N1") : "-";
                        <tr>
                            <td>
                                <span class="fw-medium">@vm.VM</span>
                                @if (vm.Template == true)
                                {
                                    <span class="badge bg-info ms-1">Template</span>
                                }
                            </td>
                            <td>
                                <span class="badge @powerBadgeClass">@vm.Powerstate</span>
                            </td>
                            <td>@(vm.CPUs?.ToString() ?? "-")</td>
                            <td>@memoryGb</td>
                            <td>@storageGb</td>
                            <td>@(vm.Primary_IP_Address ?? "-")</td>
                            <td class="text-truncate" style="max-width: 200px;" title="@vm.OS_according_to_the_VMware_Tools">
                                @(vm.OS_according_to_the_VMware_Tools ?? "-")
                            </td>
                            <td>@(vm.Datacenter ?? "-")</td>
                            <td>@(vm.Cluster ?? "-")</td>
                            <td>@(vm.Host ?? "-")</td>
                            <td>@(vm.HW_version?.ToString() ?? "-")</td>
                            <td>@(vm.Creation_date?.ToString("yyyy-MM-dd") ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Setup cascading dropdowns
            RVTools.setupCascadingFilters();
        });
    </script>
}
