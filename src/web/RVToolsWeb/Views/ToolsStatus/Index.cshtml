@model RVToolsWeb.Models.ViewModels.Health.ToolsStatusViewModel
@{
    ViewData["Title"] = "VMware Tools Status";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Tools OK</h6>
                <h4 class="mb-0 text-success">@Model.ToolsOkCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Tools Old</h6>
                <h4 class="mb-0 text-warning">@Model.ToolsOldCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Not Installed</h6>
                <h4 class="mb-0 text-danger">@Model.ToolsNotInstalledCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Not Running</h6>
                <h4 class="mb-0 text-danger">@Model.ToolsNotRunningCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Upgradeable</h6>
                <h4 class="mb-0 text-info">@Model.UpgradeableCount</h4>
            </div>
        </div>
    </div>
</div>

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() VMs</span>
    </div>
    <div>
        <a href="/api/Export/tools-status/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/tools-status/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>VM</th>
                        <th>Tools Status</th>
                        <th>Version</th>
                        <th>Upgradeable</th>
                        <th>Heartbeat</th>
                        <th>Power State</th>
                        <th>OS</th>
                        <th>Datacenter</th>
                        <th>Cluster</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vm in Model.Items)
                    {
                        string statusClass;
                        switch (vm.ToolsStatus)
                        {
                            case "toolsOk": statusClass = "badge-status-normal"; break;
                            case "toolsOld": statusClass = "badge-status-warning"; break;
                            case "toolsNotInstalled": statusClass = "badge-status-critical"; break;
                            case "toolsNotRunning": statusClass = "badge-status-critical"; break;
                            default: statusClass = "badge-status-unknown"; break;
                        }

                        var isUpgradeable = vm.Upgradeable == "1" || vm.Upgradeable?.ToLower() == "true";
                        var powerClass = vm.Powerstate?.ToLower() == "poweredon" ? "badge-poweredon" : "badge-poweredoff";
                        <tr>
                            <td>
                                <span class="fw-medium">@(vm.VM ?? "-")</span>
                                @if (vm.Template == true)
                                {
                                    <span class="badge bg-info ms-1">Template</span>
                                }
                            </td>
                            <td>
                                <span class="badge @statusClass">@(vm.ToolsStatus ?? "-")</span>
                            </td>
                            <td>@(vm.Tools_Version ?? "-")</td>
                            <td>
                                @if (isUpgradeable)
                                {
                                    <span class="badge bg-info">Yes</span>
                                }
                                else
                                {
                                    <span class="text-muted">No</span>
                                }
                            </td>
                            <td>@(vm.Heartbeat_status ?? "-")</td>
                            <td>
                                <span class="badge @powerClass">@(vm.Powerstate ?? "-")</span>
                            </td>
                            <td class="text-truncate" style="max-width: 180px;" title="@vm.OS_according_to_the_VMware_Tools">
                                @(vm.OS_according_to_the_VMware_Tools ?? "-")
                            </td>
                            <td>@(vm.Datacenter ?? "-")</td>
                            <td>@(vm.Cluster ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // No cascading filters needed
        });
    </script>
}
