@model RVToolsWeb.Models.ViewModels.Capacity.VMResourceAllocationViewModel
@{
    ViewData["Title"] = "VM Resource Allocation";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-2">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" for="datacenterSelect">Datacenter</label>
                <select class="form-select form-select-sm" id="datacenterSelect" name="Datacenter">
                    <option value="">(All)</option>
                    @foreach (var item in Model.Datacenters)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.Datacenter == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" for="clusterSelect">Cluster</label>
                <select class="form-select form-select-sm" id="clusterSelect" name="Cluster">
                    <option value="">(All)</option>
                    @foreach (var item in Model.Clusters)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.Cluster == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" for="powerstateSelect">Power State</label>
                <select class="form-select form-select-sm" id="powerstateSelect" name="Powerstate">
                    <option value="">(All)</option>
                    @foreach (var item in Model.Powerstates)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.Powerstate == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Total VMs</h6>
                <h4 class="mb-0">@Model.TotalVMs</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Powered On</h6>
                <h4 class="mb-0 text-success">@Model.PoweredOnCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Total vCPUs</h6>
                <h4 class="mb-0">@Model.TotalCPUs</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Total Memory</h6>
                <h4 class="mb-0">@Model.TotalMemoryGiB GiB</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">CPU Hot Add</h6>
                <h4 class="mb-0 text-info">@Model.CPUHotAddEnabledCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Memory Hot Add</h6>
                <h4 class="mb-0 text-info">@Model.MemoryHotAddEnabledCount</h4>
            </div>
        </div>
    </div>
</div>

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() VMs</span>
    </div>
    <div>
        <a href="/api/Export/vm-resource-allocation/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server&Datacenter=@Model.Filter.Datacenter&Cluster=@Model.Filter.Cluster&Powerstate=@Model.Filter.Powerstate"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/vm-resource-allocation/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server&Datacenter=@Model.Filter.Datacenter&Cluster=@Model.Filter.Cluster&Powerstate=@Model.Filter.Powerstate"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>VM</th>
                        <th>Power State</th>
                        <th class="text-end">vCPUs</th>
                        <th class="text-end">Sockets</th>
                        <th>CPU Shares</th>
                        <th class="text-end">Memory (GiB)</th>
                        <th class="text-end">Consumed (GiB)</th>
                        <th class="text-end">Active (GiB)</th>
                        <th>Memory Shares</th>
                        <th>Host</th>
                        <th>Cluster</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vm in Model.Items)
                    {
                        var powerClass = vm.Powerstate?.ToLower() == "poweredon" ? "badge-poweredon" : "badge-poweredoff";
                        var memoryGiB = vm.Memory_Size_MiB.HasValue ? vm.Memory_Size_MiB.Value / 1024.0 : 0;
                        var consumedGiB = vm.Memory_Consumed_MiB.HasValue ? vm.Memory_Consumed_MiB.Value / 1024.0 : 0;
                        var activeGiB = vm.Memory_Active_MiB.HasValue ? vm.Memory_Active_MiB.Value / 1024.0 : 0;
                        <tr>
                            <td>
                                <span class="fw-medium">@(vm.VM ?? "-")</span>
                                @if (vm.Template == true)
                                {
                                    <span class="badge bg-info ms-1">Template</span>
                                }
                            </td>
                            <td>
                                <span class="badge @powerClass">@(vm.Powerstate ?? "-")</span>
                            </td>
                            <td class="text-end">@(vm.CPU_Count?.ToString() ?? "-")</td>
                            <td class="text-end">@(vm.CPU_Sockets?.ToString() ?? "-")</td>
                            <td>@(vm.CPU_Shares_Level ?? "-")</td>
                            <td class="text-end">@memoryGiB.ToString("N1")</td>
                            <td class="text-end">@consumedGiB.ToString("N1")</td>
                            <td class="text-end">@activeGiB.ToString("N1")</td>
                            <td>@(vm.Memory_Shares_Level ?? "-")</td>
                            <td class="text-truncate" style="max-width: 150px;" title="@vm.Host">
                                @(vm.Host ?? "-")
                            </td>
                            <td>@(vm.Cluster ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Cascading dropdown: vCenter Server -> Datacenter
            $('#viSdkServerSelect').change(function () {
                var viServer = $(this).val();
                $.get('/api/FilterData/datacenters', { viSdkServer: viServer }, function (data) {
                    var $datacenter = $('#datacenterSelect');
                    $datacenter.empty().append('<option value="">(All)</option>');
                    $.each(data, function (i, item) {
                        $datacenter.append($('<option>').val(item.value).text(item.label));
                    });
                    $('#clusterSelect').empty().append('<option value="">(All)</option>');
                });
            });

            // Cascading dropdown: Datacenter -> Cluster
            $('#datacenterSelect').change(function () {
                var datacenter = $(this).val();
                var viServer = $('#viSdkServerSelect').val();
                $.get('/api/FilterData/clusters', { datacenter: datacenter, viSdkServer: viServer }, function (data) {
                    var $cluster = $('#clusterSelect');
                    $cluster.empty().append('<option value="">(All)</option>');
                    $.each(data, function (i, item) {
                        $cluster.append($('<option>').val(item.value).text(item.label));
                    });
                });
            });
        });
    </script>
}
