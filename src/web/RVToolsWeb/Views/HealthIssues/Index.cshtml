@model RVToolsWeb.Models.ViewModels.Health.HealthIssuesViewModel
@{
    ViewData["Title"] = "Health Issues";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() health issues</span>
        @if (Model.Items.Any())
        {
            <span class="badge bg-danger ms-2">Requires Attention</span>
        }
    </div>
    <div>
        <a href="/api/Export/health-issues/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/health-issues/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>Object Name</th>
                        <th>Issue Type</th>
                        <th>Message</th>
                        <th>Detected</th>
                        <th>vCenter</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var issue in Model.Items)
                    {
                        <tr>
                            <td><span class="fw-medium">@(issue.ObjectName ?? "-")</span></td>
                            <td>
                                <span class="badge bg-danger">@(issue.IssueType ?? "-")</span>
                            </td>
                            <td>@(issue.Message ?? "-")</td>
                            <td>@(issue.DetectedDate?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                            <td class="text-truncate" style="max-width: 150px;" title="@issue.VI_SDK_Server">
                                @(issue.VI_SDK_Server ?? "-")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // No cascading filters needed
        });
    </script>
}
