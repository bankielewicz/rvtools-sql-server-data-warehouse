@using Microsoft.Extensions.Options
@using RVToolsWeb.Configuration
@inject IOptions<AppSettings> AppSettings
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @AppSettings.Value.Ui.ApplicationTitle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/lib/datatables-bs5/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/lib/flatpickr/flatpickr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <partial name="_ErrorToastPartial" />
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark" id="sidebar-wrapper">
            <div class="sidebar-heading d-flex align-items-center px-3 py-3 border-bottom border-secondary">
                <img src="@AppSettings.Value.Ui.LogoPath" alt="Logo" class="sidebar-logo me-2" onerror="this.style.display='none'" />
                <span class="text-white fw-bold sidebar-title">@AppSettings.Value.Ui.ApplicationTitle</span>
            </div>
            <partial name="_SidebarPartial" />
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary btn-sm" id="sidebarToggle" type="button">
                        <i class="bi bi-list"></i>
                    </button>
                    <span class="navbar-text ms-3 fw-semibold">
                        @ViewData["Title"]
                    </span>
                    <div class="ms-auto d-flex align-items-center">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Settings" asp-action="Index"
                                   class="btn btn-link text-muted me-3 p-0"
                                   title="Settings"
                                   data-bs-toggle="tooltip">
                                    <i class="bi bi-gear fs-5"></i>
                                </a>
                            }

                            <div class="dropdown">
                                <button class="btn btn-link text-muted dropdown-toggle p-0"
                                        type="button"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @User.Identity.Name
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <i class="bi bi-shield-fill-check text-primary ms-1" title="Administrator"></i>
                                    }
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @{
                                        var authSource = User.FindFirst("AuthSource")?.Value ?? "LocalDB";
                                    }
                                    @if (authSource == "LocalDB")
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                                <i class="bi bi-key me-2"></i>Change Password
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                    }
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid p-4">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/datatables/dataTables.min.js"></script>
    <script src="~/lib/datatables-bs5/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/chartjs/chart.umd.min.js"></script>
    <script src="~/lib/flatpickr/flatpickr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/date-range-picker.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
