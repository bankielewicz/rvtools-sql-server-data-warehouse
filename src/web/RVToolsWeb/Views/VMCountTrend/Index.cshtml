@model RVToolsWeb.Models.ViewModels.Trends.VMCountTrendViewModel
@using RVToolsWeb.Models.ViewModels.Shared
@{
    ViewData["Title"] = "VM Count Trend";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-auto">
                @await Html.PartialAsync("_DateRangePickerPartial", (Model.Filter.StartDate, Model.Filter.EndDate, 30))
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Current VM Count</h6>
                <h4 class="mb-0">@Model.LatestVMCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Powered On</h6>
                <h4 class="mb-0 text-success">@Model.LatestPoweredOnCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Powered Off</h6>
                <h4 class="mb-0 text-secondary">@Model.LatestPoweredOffCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Net Change</h6>
                <h4 class="mb-0 @(Model.VMCountChange >= 0 ? "text-success" : "text-danger")">
                    @(Model.VMCountChange >= 0 ? "+" : "")@Model.VMCountChange
                </h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Data Points</h6>
                <h4 class="mb-0 text-info">@Model.DataPointCount</h4>
            </div>
        </div>
    </div>
</div>

<!-- Chart -->
@if (Model.ChartData.Labels.Any())
{
    <div class="card mb-3">
        <div class="card-header">
            <h6 class="mb-0"><i class="bi bi-graph-up me-2"></i>VM Count Over Time</h6>
        </div>
        <div class="card-body">
            @await Html.PartialAsync("_ChartPartial", (Model.ChartData, Model.ChartOptions, "vmCountChart"))
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>No trend data available for the selected time range.
    </div>
}

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() data points</span>
    </div>
    <div>
        <a href="/api/Export/vm-count-trend/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server&StartDate=@Model.Filter.EffectiveStartDate.ToString("yyyy-MM-dd")&EndDate=@Model.Filter.EffectiveEndDate.ToString("yyyy-MM-dd")"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/vm-count-trend/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server&StartDate=@Model.Filter.EffectiveStartDate.ToString("yyyy-MM-dd")&EndDate=@Model.Filter.EffectiveEndDate.ToString("yyyy-MM-dd")"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>vCenter</th>
                        <th class="text-end">Total VMs</th>
                        <th class="text-end">Powered On</th>
                        <th class="text-end">Powered Off</th>
                        <th class="text-end">Suspended</th>
                        <th class="text-end">Templates</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items.OrderByDescending(x => x.SnapshotDate))
                    {
                        <tr>
                            <td>@item.SnapshotDate.ToString("yyyy-MM-dd")</td>
                            <td>@(item.VI_SDK_Server ?? "-")</td>
                            <td class="text-end fw-medium">@item.VMCount</td>
                            <td class="text-end text-success">@item.PoweredOnCount</td>
                            <td class="text-end text-secondary">@item.PoweredOffCount</td>
                            <td class="text-end">@item.SuspendedCount</td>
                            <td class="text-end">@item.TemplateCount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/chart-config.js"></script>
}
