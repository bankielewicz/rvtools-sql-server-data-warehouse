@model RVToolsWeb.Models.ViewModels.Capacity.DatastoreCapacityViewModel
@{
    ViewData["Title"] = "Datastore Capacity";
}

<!-- Filter Panel -->
<div class="filter-panel">
    <form method="get" asp-action="Index">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label" for="viSdkServerSelect">vCenter Server</label>
                <select class="form-select form-select-sm" id="viSdkServerSelect" name="VI_SDK_Server">
                    <option value="">(All)</option>
                    @foreach (var item in Model.VISdkServers)
                    {
                        <option value="@item.Value" selected="@(Model.Filter.VI_SDK_Server == item.Value)">@item.Label</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label" for="statusFilterSelect">Status Filter</label>
                <select class="form-select form-select-sm" id="statusFilterSelect" name="StatusFilter">
                    <option value="All" selected="@(Model.Filter.StatusFilter == null || Model.Filter.StatusFilter == "All")">All</option>
                    <option value="Critical" selected="@(Model.Filter.StatusFilter == "Critical")">Critical Only</option>
                    <option value="Warning" selected="@(Model.Filter.StatusFilter == "Warning")">Warning Only</option>
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-funnel me-1"></i>Apply Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Total Datastores</h6>
                <h4 class="mb-0">@Model.TotalDatastores</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Critical</h6>
                <h4 class="mb-0 text-danger">@Model.CriticalCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Warning</h6>
                <h4 class="mb-0 text-warning">@Model.WarningCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Normal</h6>
                <h4 class="mb-0 text-success">@Model.NormalCount</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Total Capacity</h6>
                <h4 class="mb-0">@Model.TotalCapacityTiB TiB</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center">
            <div class="card-body py-2">
                <h6 class="card-title text-muted mb-0">Total Free</h6>
                <h4 class="mb-0 text-info">@Model.TotalFreeTiB TiB</h4>
            </div>
        </div>
    </div>
</div>

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">@Model.Items.Count() datastores</span>
    </div>
    <div>
        <a href="/api/Export/datastore-capacity/excel?VI_SDK_Server=@Model.Filter.VI_SDK_Server&StatusFilter=@Model.Filter.StatusFilter"
           class="btn btn-outline-success btn-sm btn-export">
            <i class="bi bi-file-earmark-excel me-1"></i>Export Excel
        </a>
        <a href="/api/Export/datastore-capacity/csv?VI_SDK_Server=@Model.Filter.VI_SDK_Server&StatusFilter=@Model.Filter.StatusFilter"
           class="btn btn-outline-secondary btn-sm btn-export">
            <i class="bi bi-filetype-csv me-1"></i>Export CSV
        </a>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 data-table">
                <thead class="table-light">
                    <tr>
                        <th>Datastore</th>
                        <th>Status</th>
                        <th>Type</th>
                        <th class="text-end">Capacity (GiB)</th>
                        <th class="text-end">Free (GiB)</th>
                        <th class="text-end">Free %</th>
                        <th class="text-end">Over-Prov %</th>
                        <th class="text-end">VMs</th>
                        <th>Cluster</th>
                        <th>vCenter</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ds in Model.Items)
                    {
                        string statusClass;
                        switch (ds.CapacityStatus)
                        {
                            case "Critical": statusClass = "badge-status-critical"; break;
                            case "Warning": statusClass = "badge-status-warning"; break;
                            default: statusClass = "badge-status-normal"; break;
                        }

                        var capacityGiB = ds.Capacity_MiB.HasValue ? ds.Capacity_MiB.Value / 1024.0 : 0;
                        var freeGiB = ds.Free_MiB.HasValue ? ds.Free_MiB.Value / 1024.0 : 0;
                        <tr>
                            <td>
                                <span class="fw-medium">@(ds.DatastoreName ?? "-")</span>
                                @if (ds.Accessible?.ToLower() != "true")
                                {
                                    <span class="badge bg-danger ms-1">Inaccessible</span>
                                }
                            </td>
                            <td>
                                <span class="badge @statusClass">@(ds.CapacityStatus ?? "-")</span>
                            </td>
                            <td>@(ds.Type ?? "-")</td>
                            <td class="text-end">@capacityGiB.ToString("N0")</td>
                            <td class="text-end">@freeGiB.ToString("N0")</td>
                            <td class="text-end">
                                @if (ds.Free_Percent.HasValue)
                                {
                                    <span class="@(ds.Free_Percent < 10 ? "text-danger fw-bold" : ds.Free_Percent < 20 ? "text-warning" : "")">
                                        @ds.Free_Percent.Value.ToString("N1")%
                                    </span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (ds.OverProvisioningPercent.HasValue)
                                {
                                    <span class="@(ds.OverProvisioningPercent > 150 ? "text-warning" : "")">
                                        @ds.OverProvisioningPercent.Value.ToString("N0")%
                                    </span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td class="text-end">@(ds.Num_VMs?.ToString() ?? "-")</td>
                            <td>@(ds.Cluster_name ?? "-")</td>
                            <td>@(ds.VI_SDK_Server ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // No cascading filters needed
        });
    </script>
}
