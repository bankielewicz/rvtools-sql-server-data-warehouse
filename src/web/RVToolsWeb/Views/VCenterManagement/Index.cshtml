@model RVToolsWeb.Models.ViewModels.Admin.VCenterStatusViewModel
@{
    ViewData["Title"] = "vCenter Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-server me-2"></i>vCenter Management</h2>
    <form method="post" asp-action="SyncFromImports" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-outline-primary">
            <i class="bi bi-arrow-repeat me-1"></i>Sync from Imports
        </button>
    </form>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-success bg-opacity-10 border-success">
            <div class="card-body text-center">
                <h2 class="text-success">@Model.ActiveCount</h2>
                <p class="mb-0">Active vCenters</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-secondary bg-opacity-10 border-secondary">
            <div class="card-body text-center">
                <h2 class="text-secondary">@Model.InactiveCount</h2>
                <p class="mb-0">Inactive vCenters</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning bg-opacity-10 border-warning">
            <div class="card-body text-center">
                <h2 class="text-warning">@Model.StaleCount</h2>
                <p class="mb-0">Stale (>30 days)</p>
            </div>
        </div>
    </div>
</div>

<!-- vCenter Table -->
<div class="card">
    <div class="card-header">
        <i class="bi bi-table me-2"></i>vCenter Status
    </div>
    <div class="card-body">
        <table id="vcenterTable" class="table table-striped">
            <thead>
                <tr>
                    <th>vCenter</th>
                    <th>Status</th>
                    <th>Last Import</th>
                    <th>Days Since Import</th>
                    <th>VMs</th>
                    <th>Hosts</th>
                    <th>Total Imports</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vc in Model.VCenters)
                {
                    <tr>
                        <td><strong>@vc.VI_SDK_Server</strong></td>
                        <td>
                            @switch (vc.ImportStatus)
                            {
                                case "Current":
                                    <span class="badge bg-success">Current</span>
                                    break;
                                case "Recent":
                                    <span class="badge bg-info">Recent</span>
                                    break;
                                case "Stale":
                                    <span class="badge bg-warning">Stale</span>
                                    break;
                                case "Inactive":
                                    <span class="badge bg-danger">Inactive</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">Never</span>
                                    break;
                            }
                        </td>
                        <td>@(vc.LastImportDate?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</td>
                        <td>@(vc.LastImportDate.HasValue ? vc.DaysSinceLastImport.ToString() : "-")</td>
                        <td>@vc.VMCount.ToString("N0")</td>
                        <td>@vc.HostCount.ToString("N0")</td>
                        <td>@vc.TotalImports</td>
                        <td>
                            <div class="form-check form-switch">
                                <input class="form-check-input vcenter-toggle" type="checkbox"
                                       data-viserver="@vc.VI_SDK_Server"
                                       @(vc.IsActive ? "checked" : "")>
                            </div>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-secondary"
                                    data-bs-toggle="modal"
                                    data-bs-target="#notesModal"
                                    data-vcenter="@vc.VI_SDK_Server"
                                    data-notes="@vc.Notes">
                                <i class="bi bi-pencil"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Notes Modal -->
<div class="modal fade" id="notesModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="UpdateNotes">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Edit Notes</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="viServer" id="modalVCenter" />
                    <div class="mb-3">
                        <label class="form-label">vCenter</label>
                        <input type="text" class="form-control" id="modalVCenterDisplay" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notes</label>
                        <textarea name="notes" id="modalNotes" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#vcenterTable').DataTable({
                order: [[2, 'desc']],
                pageLength: 25
            });

            // Handle toggle via AJAX
            $('.vcenter-toggle').on('change', function() {
                var checkbox = $(this);
                var viServer = checkbox.data('viserver');
                var isActive = checkbox.is(':checked');

                // Disable while processing
                checkbox.prop('disabled', true);

                $.ajax({
                    url: '@Url.Action("ToggleActiveAjax", "VCenterManagement")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ viServer: viServer, isActive: isActive }),
                    success: function(response) {
                        if (response.success) {
                            // Update summary cards
                            updateSummaryCounts();
                        } else {
                            // Revert checkbox on failure
                            checkbox.prop('checked', !isActive);
                            alert('Failed to update vCenter status');
                        }
                    },
                    error: function() {
                        // Revert checkbox on error
                        checkbox.prop('checked', !isActive);
                        alert('Error updating vCenter status');
                    },
                    complete: function() {
                        checkbox.prop('disabled', false);
                    }
                });
            });

            function updateSummaryCounts() {
                var activeCount = $('.vcenter-toggle:checked').length;
                var totalCount = $('.vcenter-toggle').length;
                var inactiveCount = totalCount - activeCount;
                $('.text-success').closest('.card-body').find('h2').text(activeCount);
                $('.text-secondary').closest('.card-body').find('h2').text(inactiveCount);
            }

            // Populate notes modal
            var notesModal = document.getElementById('notesModal');
            notesModal.addEventListener('show.bs.modal', function(event) {
                var button = event.relatedTarget;
                document.getElementById('modalVCenter').value = button.dataset.vcenter;
                document.getElementById('modalVCenterDisplay').value = button.dataset.vcenter;
                document.getElementById('modalNotes').value = button.dataset.notes || '';
            });
        });
    </script>
}
