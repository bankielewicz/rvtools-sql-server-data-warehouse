{
  "ConnectionStrings": {
    "RVToolsDW": "Server=localhost;Database=RVToolsDW;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Authentication": {
    "CookieName": "RVToolsDW.Auth",
    "CookieExpirationMinutes": 480,
    "SlidingExpiration": true,
    "LockoutThreshold": 5,
    "LockoutMinutes": 15,
    "PasswordMinLength": 8,
    "RequireUppercase": true,
    "RequireDigit": true
  },
  "Ui": {
    "LogoPath": "/images/logo-placeholder.png",
    "ApplicationTitle": "RVTools Data Warehouse"
  },
  "Caching": {
    "FilterCacheMinutes": 5
  },
  "WebLogging": {
    "Enabled": true,
    "MinimumLevel": "Warning",
    "DatabaseLogging": {
      "Enabled": true,
      "MinimumLevel": "Error"
    },
    "ConsoleLogging": {
      "Enabled": true,
      "MinimumLevel": "Information"
    },
    "IncludeRequestHeaders": true,
    "ExcludedHeaders": [ "Authorization", "Cookie", "X-CSRF-Token" ],
    "MaxStackTraceLength": 8000,
    "RetentionDays": 30
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
